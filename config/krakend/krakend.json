{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "extra_config": {
    "telemetry/opentelemetry": {
      "service_name": "krakend_prometheus_service",
      "metric_reporting_period": 1,
      "exporters": {
        "prometheus": [
          {
            "name": "local_prometheus",
            "port": 9090,
            "process_metrics": true,
            "go_metrics": true
          }
        ]
      } 
    },
    "router": {
      "disable_gzip": false
    },
    "qos/ratelimit/service": {
      "max_rate": 5000,
      "every": "1h",
      "client_max_rate": 0,
      "capacity": 10000,
      "client_capacity": 10
    },
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_headers": [
        "Authorization",
        "Content-Type",
        "Accept",
        "Origin"
      ],
      "expose_headers": [
        "Content-Length",
        "Content-Type"
      ],
      "allow_credentials": true,
      "max_age": "12h",
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS",
        "PATCH"
      ]
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/v1/hello",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/hello",
          "host": [
            "http://go-microservice:8080"
          ]
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/retail-ready/protocol/openid-connect/certs",
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/v1/keycloak_protected",
      "backend": [
        {
          "url_pattern": "/__health",
          "host": [
            "http://localhost:8080"
          ]
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/retail-ready/protocol/openid-connect/certs",
          "disable_jwk_security": true
        }
      }
    }
  ],
  "debug_endpoint": true,
  "echo_endpoint": true
}